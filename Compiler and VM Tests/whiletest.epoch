//
// WHILETEST.EPOCH
//
// Test case for while loops
//

entrypoint : () -> ()
{
	integer(beer, 5)

	dowhile(beer > 0)
	{
		integer(test, 1)

		debugwritestring("Beer supply: " ; cast(string, beer))
		debugwritestring("Take " ; cast(string, test) ; " down, pass it around...")

		beer = beer - test
	}

	debugwritestring("Bummer, we're out of beer!")
}

