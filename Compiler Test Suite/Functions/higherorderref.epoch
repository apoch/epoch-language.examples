//
// HIGHERORDERREF.EPOCH
//
// Compiler test for higher-order functions with reference-typed parameters
//


entrypoint :
{
	integer foo = 41
	mutate(1, foo, incrementer)
	
	assert(foo == 42)

	passtest()
}


incrementer : integer amount, integer ref in
{
	in = in + amount
}


mutate : integer amount, integer ref in, (func : integer, integer ref)
{
	func(amount, in)
}

