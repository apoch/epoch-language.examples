	integer functype = GetTypeByName(funcname)
	if((functype & 0x7f000000) == 0x03000000)
	{
		FindConstructorAndAddParameterTypes(Structures, funcname, paramindex, types)
	}
	else
	{
		FindBuiltinAndAddParameterTypes(funcname, paramindex, types)
	}
