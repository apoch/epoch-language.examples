FindFunctionAndAddParameterTypes : list<FunctionDefinition> ref functions, integer funcname, integer paramindex, simplelist<integer> ref types
{
	if(functions.value.Name == funcname)
	{
		if(!functions.value.InferenceDone)
		{
			simplelist<integer> temp = 0, nothing
			InferenceContext context = 0, 0, temp, false			
			
			TypeInference(functions.value, context)
		}
		
		UnwrapParamsForTypeRetrieval(functions.value.Params, paramindex, types)
	}
	else
	{
		FindFunctionAndAddParameterTypes(functions.next, funcname, paramindex, types)
	}
}

