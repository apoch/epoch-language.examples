WalkAtomsForType : list<ExpressionAtom> ref atoms, list<ExpressionAtom> ref tail, list<InferencePossibility> ref possibilities, integer ref counter, integer funcname, boolean funcret
{
	WalkAtomsForType(tail, tail.next, possibilities, counter, funcname, funcret)
	
	if(!IsOperatorInvoke(atoms.value))
	{
		ConsumeParameterForAllPossibleOverloads(possibilities, atoms.value, funcname, funcret)
		
		++counter
		if(counter > 1)
		{
			SetOperatorAtomToOverload(atoms, possibilities.value.FunctionName, counter)
			++counter
		}
	}
	else
	{
		if(counter > 0)
		{
			SetOperatorAtomToOverload(atoms, possibilities.value.FunctionName, counter + 1)
			--counter
		}
		GetAtomTypeOperator(atoms.value, possibilities)
	}
}


ConsumeParameterForAllPossibleOverloads : list<InferencePossibility> ref possibilities, ExpressionAtom ref atom, integer funcname, boolean funcret
{
	if(possibilities.value.FunctionName != 0)
	{
		TypePossibilityList poss = scratchparams
		GetAtomType(atom, poss, funcname, funcret)

		simplelist<integer> out = 0, nothing

		ConsumeParameter(possibilities.value.ParameterTypes, poss.Types, out)

		poss.Types = out

		if(countnonzero(out) == 0)
		{
			PopPossibility(possibilities, possibilities.next)
		}
	}

	ConsumeParameterForAllPossibleOverloads(possibilities.next, atom, funcname, funcret)
}

